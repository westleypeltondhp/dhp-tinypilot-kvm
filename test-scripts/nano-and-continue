#!/bin/sh

YELLOW='\033[1;33m'
NC='\033[0m' # No Color

#BREAK!


echo "${YELLOW}What is your Duo Integration Key?${NC} \n"
read ikey1
echo $ikey1
sudo sed -i '/ikey =/ s/$/ $ikey1 /' ~/login_duo.conf
echo "${YELLOW}Added ikey...${NC} \n"
sleep .5

echo "${YELLOW}What is your Duo Secret Key?${NC} \n"
read skey1
echo $skey1
sudo sed -i '/skey =/ s/$/ $skey1 /' ~/login_duo.conf
echo "${YELLOW}Added skey...${NC} \n"
sleep .5

echo "${YELLOW}What is your Duo API host?${NC} \n"
read host1
echo $host1
sudo sed -i '/host =/ s/$/ $host1 /' ~/login_duo.conf
echo "${YELLOW}Added host...${NC} \n"
sleep .5